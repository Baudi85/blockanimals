{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.sign.facing_direction": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [
            {
              "facing_east": "query.variant == 1"
            },
            {
              "facing_north": "query.variant == 2"
            },
            {
              "facing_west": "query.variant == 3"
            }
          ]
        }
      }
    }
  }
}